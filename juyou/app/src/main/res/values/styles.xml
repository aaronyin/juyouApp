<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:buttonStyle">@style/ButtonStyle</item>
        <item name="toolbarStyle" tools:ignore="NewApi">@style/MyToolBar</item>
        <item name="android:windowContentOverlay">@null</item>
        <!--<item name="android:windowTranslucentStatus">true</item>-->
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ButtonStyle" parent="@android:style/TextAppearance.Small">
        <item name="android:background">@drawable/comm_button_style</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:paddingTop">@dimen/common_padding10</item>
        <item name="android:paddingBottom">@dimen/common_padding10</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/common_text_big</item>
    </style>

    <style name="MyToolBar" parent="Widget.AppCompat.Toolbar">
        <!--左边边距-->
        <item name="contentInsetStart">@dimen/common_padding4</item>
    </style>

    <!-- ToolBar菜单样式 -->
    <!-- 设置Toolbar菜单文字的大小  -->
    <style name="ToolbarTheme" parent="AppTheme.AppBarOverlay">
        <item name="actionMenuTextColor">@android:color/white</item> <!--颜色-->
        <item name="android:textSize">@dimen/common_text_big</item> <!--字体大小-->
    </style>

</resources>
